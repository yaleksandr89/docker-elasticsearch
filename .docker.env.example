# Название проекта
COMPOSE_PROJECT_NAME=docker-elasticsearch

# Версии
ELASTIC_VERSION=latest
KIBANA_VERSION=latest
NGINX_VERSION=latest

# Имена контейнеров
ELASTIC_CONTAINER=global-elasticsearch
KIBANA_CONTAINER=global-kibana
NGINX_CONTAINER=global-nginx

# Домены
KIBANA_DOMAIN=kibana.local
ELASTIC_DOMAIN=elastic.local

# Порты
KIBANA_PORT=5601
ELASTIC_PORT=9200
NGINX_PORT=80

# Пути для данных
ELASTIC_DATA_DIR=./data/elasticsearch
KIBANA_DATA_DIR=./data/kibana

# Путь до сети к которой нужно подключить поиск
EXTERNAL_NETWORK=external_network
